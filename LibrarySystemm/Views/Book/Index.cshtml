@model IEnumerable<LibrarySystemm.Models.Book>
    @{
    Layout = null;
    }

    <!DOCTYPE html>

    <html>
    <head>
        <meta name="viewport" content="width-device-width" />
        <title>Index</title>
    </head>
    <body>
        <h1>All Book</h1>
        <a href="/Home/Add">Add New Book</a>
        <hr />
        @foreach (var item in Model)
        {
        <p>@item.Id - @item.ISBN - @item.NAME - @item.PAGENUMBER - @item.LANGUAGE - @item.CATEGORY <a href="/Home/Update/@item.Id">Update</a> <a href="/Home/Delete/@item.Id">Delete</a></p>
        }

    </body>
</html>
